                }
                
                modalBody.innerHTML = content;
                projectModal.style.display = 'block';
                setTimeout(() => {
                    projectModal.classList.add('visible');
                }, 10);
            });
        });
        
        closeModal.addEventListener('click', () => {
            projectModal.classList.remove('visible');
            setTimeout(() => {
                projectModal.style.display = 'none';
            }, 300);
        });
        
        window.addEventListener('click', (e) => {
            if (e.target === projectModal) {
                projectModal.classList.remove('visible');
                setTimeout(() => {
                    projectModal.style.display = 'none';
                }, 300);
            }
        });

        // Typing animation
        const typedTextSpan = document.getElementById('typed-text');
        const cursorSpan = document.querySelector('.cursor');
        
        const textArray = ["IoT", "Embedded Systems", "AI/ML", "PCB Design", "Robotics"];
        const typingDelay = 100;
        const erasingDelay = 50;
        const newTextDelay = 1500;
        let textArrayIndex = 0;
        let charIndex = 0;
        
        function type() {
            if (charIndex < textArray[textArrayIndex].length) {
                if(!cursorSpan.classList.contains("typing")) cursorSpan.classList.add("typing");
                typedTextSpan.textContent += textArray[textArrayIndex].charAt(charIndex);
                charIndex++;
                setTimeout(type, typingDelay);
            } 
            else {
                cursorSpan.classList.remove("typing");
                setTimeout(erase, newTextDelay);
            }
        }
        
        function erase() {
            if (charIndex > 0) {
                if(!cursorSpan.classList.contains("typing")) cursorSpan.classList.add("typing");
                typedTextSpan.textContent = textArray[textArrayIndex].substring(0, charIndex-1);
                charIndex--;
                setTimeout(erase, erasingDelay);
            } 
            else {
                cursorSpan.classList.remove("typing");
                textArrayIndex++;
                if(textArrayIndex>=textArray.length) textArrayIndex=0;
                setTimeout(type, typingDelay + 500);
            }
        }
        
        // Start the typing animation on load
        document.addEventListener("DOMContentLoaded", function() {
            setTimeout(type, 1000);
        });

        // Ripple effect for buttons
        const buttons = document.querySelectorAll('.btn');
        buttons.forEach(button => {
            button.addEventListener('click', function(e) {
                const x = e.clientX - e.target.offsetLeft;
                const y = e.clientY - e.target.offsetTop;
                
                const ripples = document.createElement('span');
                ripples.style.left = x + 'px';
                ripples.style.top = y + 'px';
                this.appendChild(ripples);
                
                setTimeout(() => {
                    ripples.remove();
                }, 1000);
            });
        });

        // Add animation to elements on scroll
        const animateElements = document.querySelectorAll('.hover-lift');
        
        const animateObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('pulse');
                    setTimeout(() => {
                        entry.target.classList.remove('pulse');
                    }, 2000);
                }
            });
        }, { threshold: 0.1 });
        
        animateElements.forEach(element => {
            animateObserver.observe(element);
        });

        // Certificate item click handler
        const certificateItems = document.querySelectorAll('.certificate-item');
        certificateItems.forEach(item => {
            item.addEventListener('click', () => {
                item.classList.toggle('glow');
                setTimeout(() => {
                    item.classList.remove('glow');
                }, 3000);
            });
        });

        // Add floating animation to random elements
        const floatingElements = document.querySelectorAll('.floating');
        floatingElements.forEach((element, index) => {
            element.style.animationDelay = `${index * 0.5}s`;
        });

        // Add rotate animation to some icons
        const rotateIcons = document.querySelectorAll('.education-item i, .certificate-item i');
        rotateIcons.forEach((icon, index) => {
            icon.classList.add('rotate');
            icon.style.animationDelay = `${index * 0.2}s`;
        });

        // Parallax effect for hero section
        window.addEventListener('scroll', () => {
            const scrolled = window.pageYOffset;
            const hero = document.querySelector('.hero');
            hero.style.backgroundPositionY = -(scrolled * 0.2) + 'px';
        });

        // Interactive background color change based on scroll
        window.addEventListener('scroll', () => {
            const scrollPercentage = (window.scrollY / (document.body.scrollHeight - window.innerHeight)) * 100;
            document.body.style.setProperty('--primary', `hsl(${210 + scrollPercentage * 0.5}, 100%, 60%)`);
            document.body.style.setProperty('--secondary', `hsl(${20 + scrollPercentage * 0.5}, 100%, 60%)`);
        });

        // Research carousel animation
        const researchCarousel = document.querySelector('.research-carousel');
        if (researchCarousel) {
            let scrollPosition = 0;
            setInterval(() => {
                researchCarousel.scrollLeft += 1;
                if (researchCarousel.scrollLeft >= researchCarousel.scrollWidth - researchCarousel.clientWidth) {
                    researchCarousel.scrollLeft = 0;
                }
            }, 30);
        }
    </script>
</body>
</html>
